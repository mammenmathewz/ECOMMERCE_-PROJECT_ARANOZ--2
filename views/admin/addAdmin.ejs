                            <script>
                                function checkForm(e) {
                                    let inputs = document.getElementsByTagName('input');
                                    console.log(inputs)
                                    for (let i = 0; i < inputs.length; i++) {
                                        if (!inputs[i].value.trim()) {
                                            e.preventDefault();
                                            alert('Please fill out the form completely');
                                            return;
                                        }
                                    }
                                }
                            </script>
                            <script>
