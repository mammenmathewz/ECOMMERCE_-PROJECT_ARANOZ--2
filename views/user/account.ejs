  <script>
    function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}
$(document).ready(function() {
    $('a').click(function() {
        var id = $(this).data('id'); // assuming each 'a' tag has a data-id attribute with the unique ID of the user

        $.ajax({
            url: '/editUser/' + id, // the URL of your server-side route that fetches the user data
            type: 'GET',
            success: function(data) {
                // populate the fields in the modal with the data
                $('#first').val(data.first_name);
                $('#last').val(data.last_name);
                $('#number').val(data.phone);
                $('#add1').val(data.address1);
                $('#add2').val(data.address2);
                $('#city').val(data.city);
                $('#district').val(data.district);
                $('#state').val(data.state);
                $('#zip').val(data.pin);

                // open the modal
                $('#addressModal').modal('show');
            }
        });
    });
});


$(".btn-order").click(function(e) {
