            document.getElementById('otpButton').addEventListener('click', function(event) {
    event.preventDefault();

    var emailInput = document.getElementById('email');

    // Email validation regex
    var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // Check if the email is valid
    if (!emailRegex.test(emailInput.value)) {
      // Show an error message
      alert('Please enter a valid email address.');
    } else {
      // Log to the console
      console.log("clicked");

      fetch('generate-otp', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email: emailInput.value })
      })
      .then(function(response) {
        // Check if the request was successful
        if(response.ok) {
          alert('OTP has been sent to your email');
          // Call the disableButton function after the OTP has been sent
          disableButton();
        } else {
          throw new Error('Request failed');
        }
      })
      .catch(function(error) {
        console.log(error);
      });
    }
});

var otpButton = document.getElementById('otpButton');

// Function to disable the button for 2 minutes
function disableButton() {
    // Disable the button
    otpButton.disabled = true;

    // Set the time for countdown (in seconds)
    var timeLeft = 30;

    // Set an interval for 1 second
    var countdownTimer = setInterval(function() {
        // Decrease the time left
        timeLeft--;

        // Display the time left on the button
        document.getElementById('otpTimer').innerText = 'Please wait ' + timeLeft + ' seconds';

        // If the time left is 0, enable the button and clear the interval
        if(timeLeft <= 0) {
            clearInterval(countdownTimer);
            document.getElementById('otpTimer').innerText = 'Try again' ;
            otpButton.disabled = false;
            otpButton.innerText = 'Resend';
        }
    }, 1000);
}



    function checkForm(e) {
    let inputs = document.getElementsByTagName('input');
    console.log(inputs)
    for(let i=0; i<inputs.length; i++) {
      if (!inputs[i].value.trim()) {
        e.preventDefault();
        alert('Please fill out the form completely');
        return;
      }
    }
    // Check if OTP and password fields are filled
    let otp = document.querySelector('input[name="otp"]');
    let password = document.querySelector('input[name="password"]');
    if (!otp.value.trim() || !password.value.trim()) {
        e.preventDefault();
        alert('Please fill out the OTP and password fields');
        return;
    }
}

// Assuming you have a button with id 'otpButton'


var password = document.getElementById("password");
var confirm_password = document.getElementById("confirm_password");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  } else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;

function showPassword() {
    var passwordInput = document.getElementById("password");
    if (passwordInput.type === "password") {
        passwordInput.type = "text";
    } else {
        passwordInput.type = "password";
    }
}


