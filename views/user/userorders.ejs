<script>
  var orderId; 
  function changeOrderStatus(orderId, status) {
      console.log(orderId, status);
  
      swal({
          title: "Are you sure?",
          text: "You are about to change the status to: " + status,
          icon: "warning",
          buttons: true,
          dangerMode: true,
      })
      .then((willChange) => {
          if (willChange) {
              var settings = {
                  url: "/admin/change-order-status/" + orderId,
                  method: "POST",
                  timeout: 0,
                  headers: {
                      "Content-Type": "application/json",
                  },
                  data: JSON.stringify({
                      status: status
                  }),
              };
  
              $.ajax(settings)
              .done(function(response) {
                  swal("Status has been changed!", {
                      icon: "success",
                  }).then(() => {
                      location.reload();
                  });
              })
              .fail(function(xhr, ajaxOptions, thrownError) {
                  swal("Error changing status!", {
                      icon: "error",
                  });
              });
          } else {
              swal("Status change cancelled!");
          }
      });
  }
  
  $(document).ready(function() {
    $(".order-status").change(function() {
        var status = $(this).val();
        var orderId = $(this).attr('id').substring(6);
        changeOrderStatus(orderId, status);
        console.log(orderId+" "+status);
    });
});

